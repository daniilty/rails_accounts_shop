<% provide(:title, "Add a new account") %>
<h1>Add account</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@ac, url: accounts_new_url) do |f| %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email, class: "form-control" %>

      <%= f.label :pass, "Password" %>
      <%= f.text_field :pass, class: "form-control" %>

      <%= f.label :usr_id, "User id" %>
      <%= f.text_field :usr_id, class: "form-control" %>

      <%= f.label :active, class: 'checkbox inline' do %>
        <%= f.check_box :active %>
        <span> Active</span>
      <% end %>

      <%= f.submit "Create account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>